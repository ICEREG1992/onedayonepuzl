{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/list",
        "destination": "/list.html"
      },
      {
        "source": "/submit",
        "destination": "/submit.html"
      },
      {
        "source": "/puzzle",
        "function": "host"
      }
    ]
  }
}
